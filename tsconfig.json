{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        // TODO: enable these
        // "noImplicitAny": false,
        // "strictNullChecks": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": ["es2017"],
        "outDir": "./lib",
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
