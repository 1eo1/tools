{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "lib/**/*.ts",
        "typings/**.ts",
        "custom_typings/**.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "lib/ast-utils/analyze-properties.ts",
        "lib/ast-utils/ast-value.ts",
        "lib/ast-utils/behavior-finder.ts",
        "lib/ast-utils/declaration-property-handlers.ts",
        "lib/ast-utils/descriptors.ts",
        "lib/ast-utils/docs.ts",
        "lib/ast-utils/esutil.ts",
        "lib/ast-utils/fluent-traverse.ts",
        "lib/ast-utils/jsdoc.ts",
        "lib/loader/error-swallowing-fs-resolver.ts",
        "lib/loader/file-loader.ts",
        "lib/loader/fs-resolver.ts",
        "lib/loader/noop-resolver.ts",
        "lib/loader/redirect-resolver.ts",
        "lib/loader/resolver.ts",
        "lib/loader/string-resolver.ts",
        "lib/loader/xhr-resolver.ts",
        "typings/tsd.d.ts",
        "custom_typings/doctrine.d.ts",
        "custom_typings/dom5.d.ts",
        "custom_typings/escodegen.d.ts",
        "custom_typings/estraverse.d.ts",
        "custom_typings/estree.d.ts",
        "custom_typings/main.d.ts"
    ]
}
