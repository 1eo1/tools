{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./lib"
    },
    "include": [
        "custom_typings/**.d.ts",
        "src/**/*.ts",
        "src/analyzer.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
