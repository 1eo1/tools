{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "isolatedModules": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "outDir": "lib",
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "custom_typings/*.d.ts",
    "src/*.ts",
    "src/**/*.ts"
  ]
}
